<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.4.1/lux/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">

    <!-- Favicon -->
    <link rel="shortcut icon" href="public\img\xIcone.png" type="image/x-icon">
</head>

<body>

    <!-- HEADER -->
    <div class="container">
        <div class="row">
            <div class="col">
                <header>
                    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                            aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarColor01">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item active">
                                    <a class="nav-link" href="/apis/profile">Home <span
                                            class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/apis/logout">LOGOUT</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </header>
            </div>
        </div>
    </div>
    <!-- End HEADER -->


    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1>SOCIETY NAME</h1>
                <h5>Adress</h5>
                <h5>CP/ Ville</h5>
                <h5>PHONE</h5>
            </div>
            <div class="col-6">
                 <h1>FACTURE</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
            </div>
            <div class="col-6">
                <h1>CLIENT</h1>
                <h5>Adress</h5>
                <h5>CP/ Ville</h5>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">IDCommand</th>
                            <th scope="col">Reference Product</th>
                            <th scope="col">Quantite</th>
                            <th scope="col">Unite</th>
                            <th scope="col">PrixUHT</th>
                            <th scope="col">Action</th>

                        </tr>
                    </thead>
                    <tbody>
                       <% if(data.length > 0){%>
                           <% data.forEach((rows) => {%>
                                <tr class="table-light">
                                    <th scope="row"><%= rows.idCommand %></th>
                                    <td> <%= rows.Reference %> </td>
                                    <td> <%= rows.Quantite %> </td>
                                    <td><input type="text" name="unite" id="unite" class="form-control" value="1" disabled></td>
                                    <td><input type="text" name="prixHT" id="prixHT" class="form-control" ></td>
                                    <td><div class="form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" value="" checked="">
                                        </label>
                                    </div>
                                </td>
                                </tr>
                           <% }) }%>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>






    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    
    <script src="https://kit.fontawesome.com/1b86f0e672.js" crossorigin="anonymous"></script>
    
</body>
</html>