<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.4.1/lux/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>

    <!-- HEADER -->
    <div class="container">
        <div class="row">
            <div class="col">
                <header>
                    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                            aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarColor01">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item active">
                                    <a class="nav-link" href="/apis/profile">Home <span
                                            class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/apis/logout">LOGOUT</a>
                                </li>
                            </ul>
                           
                        </div>
                    </nav>
                </header>
            </div>
        </div>
    </div>
    <!-- end header -->


    <!-- Alert -->
    <!-- <div class="container">
        <div class="row">
            <div class="col">
                <% if(success.length > 0 ){ %>
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Well done!</strong> <%= success %>
                </div>
                <% } %>

            </div>
        </div>
    </div> -->
    <!-- end Alert -->

    <!-- Form  -->
    <div class="container">
        <div class="row">
            <div class="col">
                <form action="/apis/provider/update" method="POST" enctype="multipart/form-data">
                   <% if(data.length > 0 ) {%>
                       <% data.forEach((rows) => {%>
                        <div class="jumbotron">
                            <!-- IDProvider -->
                            <div class="form-group">
                                <input type="hidden" name="iDProvider" value="<%= rows.idProvider%>">
                            </div>
                            <!-- FullName -->
                            <div class="form-group">
                                <label class="col-form-label" for="fullname">Full Name</label>
                                <input type="text" class="form-control" placeholder="FullName" value="<%= rows.FullName%>" id="fullname" name="fullname" required>
                            </div>
                            <!-- Phone -->
                            <div class="form-group">
                                <label class="col-form-label" for="phone">Phone</label>
                                <input type="text" class="form-control" placeholder="Phone"value="<%= rows.Phone%>" id="phone" name="phone" required>
                            </div>
                            <!-- Email -->
                            <div class="form-group">
                                <label for="mail">Email address</label>
                                <input type="email" class="form-control" value="<%= rows.Email%>" id="email" aria-describedby="emailHelp" placeholder="Enter email"
                                    name="mail" required>
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                    else.</small>
                            </div>
                            <!-- Country -->
                            <div class="form-group">
                                <label class="col-form-label" for="country">Country</label>
                                <input type="text" class="form-control" placeholder="Country" value="<%= rows.Country%>" id="country" name="country" required>
                            </div>
                            <!-- Logo -->
                            <div class="form-group">
                                <label for="counrty">File input</label>
                                <input type="file" class="form-control-file" id="country" aria-describedby="fileHelp" name="file" required>
                                <small id="fileHelp" class="form-text text-muted">This is some placeholder block-level help
                                    text for the above input. It's a bit lighter and easily wraps to a new line.</small>
                            </div>
                            <!-- Button -->
                            <button type="submit" class="btn btn-primary">Add +</button>
                        </div>
                       <% }) }%>
                </form>
            </div>

        </div>
    </div>
    <!-- end Form -->



    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <script src="https://kit.fontawesome.com/1b86f0e672.js" crossorigin="anonymous"></script>
</body>

</html>
