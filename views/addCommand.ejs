<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.4.1/lux/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">

    
    <!-- Favicon -->
    <link rel="shortcut icon" href="public\img\xIcone.png" type="image/x-icon">
</head>

<body>

    <!-- HEADER -->
    <div class="container">
        <div class="row">
            <div class="col">
                <header>
                    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                            aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarColor01">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item active">
                                    <a class="nav-link" href="/apis/profile">Home <span
                                            class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/apis/logout">LOGOUT</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </header>
            </div>
        </div>
    </div>
    <!-- End HEADER -->



    <!-- Form -->
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="jumbotron">

                    <form action="/apis/command/add" method="POST" enctype="multipart/form-data">
                        <!-- Numero -->
                        <!-- <div class="form-group">
                            <label class="col-form-label" for="numero">Numero Command</label>
                            <input type="text" class="form-control" placeholder="Numero like CM001" id="numero"
                                name="numero">
                        </div> -->
                        <!-- Product Reference -->
                        <div class="form-group">
                            <label for="ReferenceID">Reference Product</label>
                            <select class="form-control" id="ReferenceID" name="ReferenceID" required>
                                <option value="">Select Product Reference</option>
                                <% if(product.length > 0) {%>
                                <% product.forEach((rows) => {%>
                                <option value="<%= rows.idProduct%>"><%= rows.Reference%> </option>
                                <% }) }%>
                            </select>
                        </div>
                        <!-- Quantite -->
                        <div class="form-group">
                            <label class="col-form-label" for="quantite">Quantite</label>
                            <input type="text" class="form-control" placeholder="quantite ex 15" id="quantite"
                                name="quantite" required>
                        </div>
                        <!-- Manager -->
                        <div class="form-group">
                            <label for="ManagerID">Manager</label>
                            <select class="form-control" id="ManagerID" name="ManagerID" required>
                                <option value="">Select Manager Matricule</option>
                                <% if(manager.length > 0) {%>
                                <% manager.forEach((rows) => {%>
                                <option value="<%= rows.idManager%>"><%= rows.Matricule%> </option>
                                <% }) }%>
                            </select>
                        </div>
                        <!-- Provider-->
                        <div class="form-group">
                            <label for="ProviderID"> Provider</label>
                            <select class="form-control" id="ProviderID" name="ProviderID" required>
                                <option value="">Select Provider</option>
                                <% if(provider.length > 0) {%>
                                <% provider.forEach((rows) => {%>
                                <option value="<%= rows.idProvider%>"><%= rows.FullName%> </option>
                                <% }) }%>
                            </select>
                        </div>

                        <!-- Button -->
                        <button type="submit" class="btn btn-primary">Add +</button>

                    </form>

                </div>
            </div>
        </div>
    </div>

    <!-- endForm -->











    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <script src="https://kit.fontawesome.com/1b86f0e672.js" crossorigin="anonymous"></script>
</body>

</html>
