<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.4.1/lux/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>

    <!-- HEADER -->
    <div class="container">
        <div class="row">
            <div class="col">
                <header>
                    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                            aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarColor01">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item active">
                                    <a class="nav-link" href="/apis/profile">Home <span
                                            class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/apis/logout">LOGOUT</a>
                                </li>
                            </ul>
                           
                        </div>
                    </nav>
                </header>
            </div>
        </div>
    </div>
    <!-- End HEADER -->

    <!-- Alert -->
    <!-- <div class="container">
        <div class="row">
            <div class="col">
                <% if(success.length > 0 ){ %>
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Well done!</strong> <%= success %>
                </div>
                <% } %>

            </div>
        </div>
    </div> -->
    <!-- end Alert -->


    <div class="container">
        <div class="row">
            <div class="col">
                <% if(data.length > 0) {%>
                <% data.forEach((rows) => {%>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">IDCommand</th>
                            <th scope="col">Date</th>
                            <th scope="col">Product</th>
                            <th scope="col">Quantite</th>
                            <th scope="col">Manager</th>
                            <th scope="col">Provider</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="table-light">
                            <td><%= rows.idCommand%></td>
                            <td><%= rows.Date%></td>
                            <td><%= rows.Reference%></td>
                            <td><%= rows.Quantite%></td>
                            <td><%= rows.Matricule%></td>
                            <td><%= rows.FullName%></td>
                            <td>
                                <a href="/apis/command/edit/<%= rows.idCommand%>"><i class="fas fa-edit"></i></a>
                                <a href="/apis/command/<%= rows.idCommand%>"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <%  }) } else {%>
                <!-- Alert -->
                <div class="container">
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col">
                            <div class="alert alert-dismissible alert-danger">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                <strong>Oop's!</strong> Something wrong no data was found
                            </div>
                        </div>
                        <div class="col-3"></div>
                    </div>
                </div>
                <!-- end Alert -->
                <% }%>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <script src="https://kit.fontawesome.com/1b86f0e672.js" crossorigin="anonymous"></script>
</body>

</html>
